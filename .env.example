# Backend Environment Variables
NODE_ENV=development
PORT=5001

# Database (PostgreSQL)
# Format: postgres://username:password@host:port/database
# Example: postgres://postgres:password@127.0.0.1:5432/PlacementHub
DATABASE_URI=postgres://postgres:password@127.0.0.1:5432/PlacementHub

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=7

# Email Configuration
EMAIL_FROM_NAME=PlacementHub Career Platform
EMAIL_FROM=noreply@placementhub.dev
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_email_username
EMAIL_PASS=your_email_password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ML Service
ML_SERVICE_URL=http://localhost:5002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info